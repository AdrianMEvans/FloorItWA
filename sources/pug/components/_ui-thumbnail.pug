mixin thumbnail-classic(obj)
	// Thumbnail Classic
	article.thumbnail.thumbnail-classic(class=obj.mod)
		.thumbnail-classic-figure
			+jpg( obj.img )

		.thumbnail-classic-caption
			.thumbnail-classic-title-wrap
				a.icon.fl-bigmug-line-zoom60(href='images/' + obj.imgOriginal + '.jpg' data-lightgallery='item')
					+jpg( obj.img )
				h5.thumbnail-classic-title: a(href='single-project.html')= 'Project #' + (obj.numberProject ? obj.numberProject : obj.numberImg)
			p.thumbnail-classic-text= obj.text

