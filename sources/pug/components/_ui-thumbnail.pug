mixin thumbnail-creative(obj)
	// Thumbnail Modern
	article.thumbnail.thumbnail-creative(class=obj.mod)&attributes(attributes)
		a.thumbnail-creative-figure(href='images/' + (obj.nameImgOriginal ? obj.nameImgOriginal : obj.nameImg + '-' + (obj.numberImgOriginal ? obj.numberImgOriginal : obj.numberImg)) + '-1200x800-original.jpg' data-lightgallery='item')
			+jpg(obj.nameImg + '-' + obj.numberImg + '-' + obj.sizeImg)

		.thumbnail-creative-caption
			h5.thumbnail-creative-title: a(href='single-project.html')=obj.title
			.thumbnail-creative-time
				time(datetime=obj.time.datetime)=obj.time.dateText
			.thumbnail-creative-button
				a.button.button-md.button-white(href='#') Read more

mixin thumbnail-mary(obj)
	// Thumbnail Classic
	article.thumbnail.thumbnail-mary(class=obj.mod)&attributes(attributes)
		.thumbnail-mary-figure: +jpg( obj.img )

		.thumbnail-mary-caption
			a.icon.fl-bigmug-line-zoom60(href='images/' + obj.imgOriginal + '.jpg' data-lightgallery='item')
				+jpg( obj.img )
			if(obj.titleNone == true)
			else
				if(obj.thumbnailSmall == true)
					h6.thumbnail-mary-title: a(href='single-project.html')= 'Project #' + obj.numberProject
				else
					h5.thumbnail-mary-title: a(href='single-project.html')= 'Project #' + obj.numberProject
	if(obj.nameProject)
		.thumbnail-mary-description
			h5.thumbnail-mary-project: a(href='single-project.html')=obj.nameProject
			span.thumbnail-mary-decor
			h5.thumbnail-mary-time
				time(datetime=obj.time)=obj.time

