extends  ../_skeleton

block variables
	- var activeCategory = 'gallery'
	- var pageName = 'Single project'

block page 
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-breadcrumbs'
	})

	// Single Project
	section.section.section-sm.section-first.bg-default
		.container
			.row.row-50.justify-content-center.align-items-xl-center
				.col-md-10.col-lg-6.col-xl-7
					.offset-right-xl-15
						// Owl Carousel
						.owl-carousel.owl-dots-white(data-items='1', data-dots='true', data-autoplay='true', data-animation-in="fadeIn", data-animation-out="fadeOut")
							+jpg('single-project-1-655x496')
							+jpg('single-project-2-655x496')
							+jpg('single-project-3-655x496')

				.col-md-10.col-lg-6.col-xl-5
					.single-project
						h4 Sunny valley Hotel
						p.text-gray-500 Observare inciviliter ducunt ad noster assimilatio. Medicinas peregrinationes in teres rugensis civitas! Ubi est talis spatii? Azureus historia inciviliter examinares deus est. Poetas ire in brema! Secundus, azureus parmas aegre fallere de emeritis, alter genetrix.

						.divider.divider-30

						ul.list.list-description.d-inline-block.d-md-block
							li
								span Client:
								span Valley Accommodation Ltd.
							li
								span Year:
								span 2013
							li
								span Location:
								span Madrid, Spain
							li
								span Categories:
								span Custom Projects

						.divider.divider-30
						.group-md.group-middle.justify-content-sm-start
							span.social-title Share
							div: +widget-list([], '', 'list-inline-sm social-list')
	='\n'

	// Project Links
	section.section.section-sm.section-last.bg-default
		.container
			.project-navigation
				.row.row-30
					.col-sm-6
						+project-minimal({
							href: '#',
							unit: 'flex-column flex-lg-row text-lg-left',
							img: 'project-minimal-1-168x139',
							title: 'McMillanâ€™s <br class="d-none d-lg-block">House',
							text: '2012, Residential Project, Denmark'
						})
					.col-sm-6
						+project-minimal({
							href: '#',
							unit: 'flex-column flex-lg-row-reverse text-lg-right',
							img: 'project-minimal-2-168x139',
							title: 'Modern<br class="d-none d-lg-block"> Luxury Hotel',
							text: '2009, Custom Project, Switzerland'
						})

				a.project-navigation-arrow-prev(href='#')
				a.project-navigation-arrow-next(href='#')
	='\n'

	// Page Footer
	include ../sections/_footer-modern