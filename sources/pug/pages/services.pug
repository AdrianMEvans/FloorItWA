extends  ../_skeleton

//- Includes
include ../components/_ui-box-services

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Services'

block page 
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-breadcrumbs'
	})

	// Section-services
	section.section.section-xl.bg-default
		.container
			.row.row-50.justify-content-center.box-ordered
				.col-md-6.col-lg-5.col-xl-4
					+services-classic({
						img: 'services-1-370x297',
						title: 'Floor installation'
					})
				.col-md-6.col-lg-5.col-xl-4
					+services-classic({
						img: 'services-2-370x297',
						title: 'Floor Repair'
					})
				.col-md-6.col-lg-5.col-xl-4
					+services-classic({
						img: 'services-3-370x297',
						title: 'Floor Insurance'
					})
				.col-md-6.col-lg-5.col-xl-4
					+services-classic({
						img: 'services-4-370x297',
						title: 'Warranty'
					})
				.col-md-6.col-lg-5.col-xl-4
					+services-classic({
						img: 'services-5-370x297',
						title: 'Floor Care'
					})
				.col-md-6.col-lg-5.col-xl-4
					+services-classic({
						img: 'services-6-370x297',
						title: 'Consultations'
					})
	='\n'

	// Page Footer
	include ../sections/_footer-modern
