extends  ../_skeleton

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Buttons'

block page 
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-breadcrumbs'
	})

	// Button Sizes
	section.section.section-sm.section-first.bg-default.text-md-left
		.container
			h3 Button Sizes
			.group-sm.group-middle
				.button.button-lg.button-secondary.button-pipaluk Large size
				.button.button-secondary.button-pipaluk Default size
				.button.button-md.button-secondary.button-pipaluk Medium size
	='\n'

	// Button Shapes
	section.section.section-sm.bg-default.text-md-left
		.container
			h3 Button Shapes
			.group-sm.group-middle
				.button.button-secondary.button-pipaluk Square
				.button.button-secondary.button-pipaluk.button-circle Circle
	='\n'

	// Buttons with Icons
	section.section.section-sm.section-last.bg-default.text-md-left
		.container
			h3 Buttons with Icons
			.group-sm.group-middle
				.button.button-icon.button-icon-left.button-secondary.button-pipaluk
					span.icon.fa.fa-plus
					| Add to cart
				.button.button-icon.button-icon-left.button-default-outline.button-wapasha
					span.icon.fa.fa-plus
					| Add to cart
	='\n'

	// Page Footer
	include ../sections/_footer-modern