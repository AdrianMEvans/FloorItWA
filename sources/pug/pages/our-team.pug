					})
	='\n'

	// Team #4
	section.section.section-sm.section-last.bg-default
		.container
			h3 #4
			.row.row-30.justify-content-center.justify-content-lg-start
				.col-sm-6.col-md-5.col-lg-4.col-xl-3
					+team-nikki({
						img: 'team-7-270x248',
						name: 'James Smith',
