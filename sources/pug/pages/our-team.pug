extends  ../_skeleton

//- Includes
include ../components/_ui-box-team

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Our Team'

block page 
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-breadcrumbs'
	})

	// Team #1
	section.section.section-sm.section-first.bg-default
		.container
			h3 #1
			.row.row-sm.row-30
				.col-sm-6.col-lg-4
					+team-classic({
						img: 'team-1-370x406',
						name: 'Ryan Wilson',
						status: 'Founder, Owner'
					})
				.col-sm-6.col-lg-4
					+team-classic({
						img: 'team-2-370x406',
						name: 'Amanda Clark',
						status: 'Measure Technician'
					})
				.col-sm-6.col-lg-4
					+team-classic({
						img: 'team-3-370x406',
						name: 'Sam Robinson',
						status: 'Installer'
					})
	='\n'

	// Team #2
	section.section.section-sm.bg-default
		.container
			h3 #2
			.row.row-xs.row-40.justify-content-center.justify-content-lg-start
				.col-sm-6.col-md-5.col-lg-3
					+team-modern({
						img: 'team-11-118x118',
						name: 'Ryan Wilson',
						status: 'Founder, Owner'
					})
