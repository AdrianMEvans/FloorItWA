					+team-modern({
						img: 'team-12-118x118',
						name: 'Sam Robinson',
						status: 'Installer'
					})
				.col-sm-6.col-md-5.col-lg-3
					+team-modern({
						img: 'team-13-118x118',
						name: 'Amanda Clark',
						status: 'Measure Technician'
					})
				.col-sm-6.col-md-5.col-lg-3
					+team-modern({
						img: 'team-14-118x118',
						name: 'James Smith',
						status: 'Operations Manager'
					})
	='\n'

	// Team #3
	section.section.section-sm.bg-default
		.container
			h3 #3
			.row.row-sm.row-40
				.col-md-6.col-lg-4
					+team-creative({
						img: 'team-4-370x366',
						name: 'Amanda Clark',
						status: 'Measure Technician'
					})
