extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	+header-modern

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-breadcrumbs'
	})

	// Section Skill Bars and Circle Progress Bars
	section.section.section-xl.bg-default
		.container
			.row.row-50.justify-content-center
				.col-md-10.col-lg-5.col-xl-6
					+progress-bar-linear({
						title: "Flooring Design",
						value: "79"
					})
					+progress-bar-linear({
						title: "Custom Projects",
						value: "72"
					})
					+progress-bar-linear({
						title: "Complex solutions",
						value: "88"
					})

				.col-md-10.col-lg-7.col-xl-6
					.row.row-50.justify-content-center
						.col-sm-4
							+progress-circle({
								title: 'Experience',
								value: 90
							})
						.col-sm-4
							+progress-circle({
								title: 'Dedication',
								value: 60
							})
						.col-sm-4
							+progress-circle({
								title: 'Knowledge',
								value: 60
							})
	='\n'

	// Page Footer
	include ../sections/_footer-modern
